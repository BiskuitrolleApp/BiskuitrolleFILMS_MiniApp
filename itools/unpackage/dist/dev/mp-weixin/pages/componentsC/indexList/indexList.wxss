.list__item {
  display: flex;
  flex-direction: row;
  padding: 6px 12px;
  align-items: center;
}
.list__item__avatar {
  height: 35px;
  width: 35px;
  border-radius: 3px;
}
.list__item__user-name {
  font-size: 16px;
  margin-left: 10px;
  color: #303133;
}
.list__footer {
  color: #909193;
  font-size: 14px;
  text-align: center;
